{% extends "default.njk" %}

{% block content %}
<div class="posts">
      {% for post in pagination.files %}
      <div class="post">
          <h1 class="post-title">
              <a href="{{ site.baseurl }}/{{ post.path }}">
                  {{ post.title }}
              </a>
          </h1>

          <span class="post-date">{{ post.date | date('DD.MM.YYYY') }}</span>

        {{ post.contents|safe }}
      </div>
      {% endfor %}
</div>

<div class="pagination">
    {% if pagination.previous %}
        {% if pagination.num == 2 %}
            <a class="pagination-item newer" href="{{ site.baseurl }}/">Newer</a>
        {% else %}
            <a class="pagination-item newer" href="{{ site.baseurl }}/{{pagination.previous.path}}">Newer</a>
        {% endif %}
    {% else %}
        <span class="pagination-item newer">Newer</span>
    {% endif %}

    {% if pagination.next %}
        <a class="pagination-item older" href="{{ site.baseurl }}/{{pagination.next.path}}">Older</a>
    {% else %}
        <span class="pagination-item older">Older</span>
    {% endif %}
</div>

{% endblock %}
